# ===== SUPABASE =====
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ===== MERCADO PAGO =====
MERCADOPAGO_ACCESS_TOKEN=your_access_token
MERCADOPAGO_WEBHOOK_SECRET=your_webhook_secret

# ===== URLs =====
BACKEND_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# ===== SERVIDOR =====
PORT=3000
NODE_ENV=development

# ===== SEGURIDAD =====
# Dominios permitidos para CORS (separados por comas)
# En producción, agregar el dominio real: https://tudominio.com,https://www.tudominio.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ===== LOGGING Y MONITOREO =====
# Nivel de log: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# ===== NOTAS =====
# - LOG_LEVEL controla qué logs se guardan en el buffer
# - DEBUG: Muestra todo (desarrollo)
# - INFO: Información general (producción)
# - WARN: Solo advertencias y errores
# - ERROR: Solo errores críticos
# - El console logging se puede habilitar/deshabilitar desde el panel de monitoreo
